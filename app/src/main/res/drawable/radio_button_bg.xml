<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape >
            <solid android:color="@color/dark_gray_tran"/>
            <corners android:radius="@dimen/dp10"/>
            <size android:height="@dimen/dp20" android:width="@dimen/dp40"/>
            <padding android:bottom="@dimen/dp3" android:left="@dimen/dp5" android:right="@dimen/dp5" android:top="@dimen/dp3"/>
        </shape>
    </item>

    <item android:state_pressed="false">
        <shape >
            <solid android:color="@color/light_gray_tran"/>
            <corners android:radius="@dimen/dp10"/>
            <size android:height="@dimen/dp20" android:width="@dimen/dp40"/>
            <padding android:bottom="@dimen/dp3" android:left="@dimen/dp5" android:right="@dimen/dp5" android:top="@dimen/dp3"/>
        </shape>
    </item>
</selector>