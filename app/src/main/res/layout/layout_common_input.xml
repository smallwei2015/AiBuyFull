<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/toolbarSize"
    android:id="@+id/search_view"
    android:transitionName="@string/search_name">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bgwhite"
        android:padding="@dimen/dp5">

        <EditText
            android:id="@+id/search_edit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/round_rectangle_gray_dp5_bg"
            android:hint="@string/search_hint"
            android:paddingLeft="@dimen/dp10"
            android:textColor="@color/textmiddle"
            android:textSize="@dimen/sp14"
            android:cursorVisible="false"
            android:lines="1"
            android:textColorHint="@color/textlight"
            android:imeOptions="actionSearch"
            android:textCursorDrawable="@color/colorPrimary"
            android:singleLine="true"/>

        <ImageView
            android:id="@+id/search_left"
            style="@style/normal_img_style"
            android:src="@mipmap/ic_launcher"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/search_right"
            style="@style/normal_img_style"
            android:layout_alignParentRight="true"
            android:src="@mipmap/ic_launcher" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
